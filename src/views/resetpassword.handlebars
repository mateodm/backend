<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="text-center mb-4">Cambiar Contraseña</h2>
            <div class="mb-3">
                <label for="nueva_contraseña" class="form-label">Nueva Contraseña:</label>
                <input type="password" class="form-control" id="npassword" required>
            </div>
            <div class="mb-3">
                <label for="confirmar_contraseña" class="form-label">Confirmar contraseña:</label>
                <input type="password" class="form-control" id="cpassword" required>
            </div>
            <div class="text-center">
                <button type="button" class="btn btn-success my-3 mb-3" onclick="cambiarContraseña()">Cambiar Contraseña</button>
            </div>
        </div>
    </div>
</div>