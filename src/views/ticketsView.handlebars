<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
        <table class="my-5 mb-5">
            <thead>
                <tr>
                    <th>Comprador</th>
                    <th>Productos</th>
                    <th>Monto total</th>
                    <th>Estado de la transaccion</th>
                </tr>
            </thead>
            <tbody>
                {{#each tickets}}
                <tr>
                    <td>{{this.purchaser}} </td>
                    <td>{{#each this.product}}
                        {{this.title}} - {{this.quantity}}
                        {{/each}}
                    </td>
                    <td>{{this.amount}}</td>
                    <td>{{this.status}}</td>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
    <div class="col-md-2"></div>

</div>

<style>
    table {
        border-collapse: collapse;
        width: 100%;
    }

    th,
    td {
        border: 1px solid #ddd;
        padding: 8px;
        text-align: left;
    }

    th {
        background-color: #f2f2f2;
    }

    tr:hover {
        background-color: #f5f5f5;
    }

    .delete-icon {
        color: red;
        cursor: pointer;
    }
</style>