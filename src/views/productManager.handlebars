<div class="row">
<div class="col-md-2"></div>
<div class="col-md-8">
<table class="my-5 mb-5">
    <thead>
        <tr>
            <th>Título</th>
            <th>Descripción</th>
            <th>Cantidad</th>
            <th>Precio</th>
            <th>Code</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        {{#each products}}
        <tr>
            <td>{{title}}</td>
            <td>{{this.description}}</td>
            <td>{{this.stock}}</td>
            <td>{{this.price}}</td>
             <td>{{this.code}}</td>
            <td><img class="tacho" onclick="deleteProduct('{{_id}}')"
            src="https://img.freepik.com/vector-premium/eliminar-icono-boton-rojo-ilustracion-simbolo-bote-basura_692379-615.jpg?w=2000"></td>
        </tr>
        {{/each}}
    </tbody>
</table>
</div>
<div class="col-md-2"></div>

</div>


<style>
    .tacho {
        width: 40px;
    }
    .tacho:hover {
        opacity: 0.8;
    }
    table {
        border-collapse: collapse;
        width: 100%;
    }

    th,
    td {
        border: 1px solid #ddd;
        padding: 8px;
        text-align: left;
    }

    th {
        background-color: #f2f2f2;
    }

    tr:hover {
        background-color: #f5f5f5;
    }

    .delete-icon {
        color: red;
        cursor: pointer;
    }
</style>
